<%= form_with(model: api, local: true) do |form| %>
  <% if api.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(api.errors.count, "error") %> prohibited this api from being saved:</h2>

      <ul>
      <% api.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :action %>
    <%= form.text_field :action, id: :api_action %>
  </div>

  <div class="field">
    <%= form.label :uri %>
    <%= form.text_field :uri, id: :api_uri %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.number_field :status, id: :api_status %>
  </div>

  <div class="field">
    <%= form.label :response %>
    <%= form.text_field :response, id: :api_response %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
