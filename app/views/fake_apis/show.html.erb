<%- model_class = FakeApi -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:method) %>:</strong></dt>
  <dd><%= @fake_api.method %></dd>
  <dt><strong><%= model_class.human_attribute_name(:uri) %>:</strong></dt>
  <dd><%= @fake_api.uri %></dd>
  <dt><strong><%= model_class.human_attribute_name(:response) %>:</strong></dt>
  <dd><%= @fake_api.response %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              fake_apis_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_fake_api_path(@fake_api), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              fake_api_path(@fake_api),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
