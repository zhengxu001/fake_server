<%- model_class = FakeApi -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:method) %></th>
      <th><%= model_class.human_attribute_name(:uri) %></th>
      <th><%= model_class.human_attribute_name(:response) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @fake_apis.each do |fake_api| %>
      <tr>
        <td><%= link_to fake_api.id, fake_api_path(fake_api) %></td>
        <td><%= fake_api.method %></td>
        <td><%= fake_api.uri %></td>
        <td><%= fake_api.response %></td>
        <td><%=l fake_api.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      fake_api_path(fake_api), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_fake_api_path(fake_api), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      fake_api_path(fake_api),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_fake_api_path,
            :class => 'btn btn-primary' %>